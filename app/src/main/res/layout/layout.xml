<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/manageTags"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="Tags" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="Log" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="Press button to start recording"
        android:textSize="18sp" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Start Recording" />

    <Button
        android:id="@+id/fakeNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create Fake Note" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/transcriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Transcribed text will appear here"
            android:padding="8dp"
            android:textSize="16sp" />
    </ScrollView>

    <!-- New tags TextView -->
    <TextView
        android:id="@+id/tagsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tags: None"
        android:textSize="14sp"
        android:textStyle="italic" />

</LinearLayout>
